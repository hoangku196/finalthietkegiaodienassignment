<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblDateSpend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="24sp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblTypeSpend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/lblDateSpend"
        app:layout_constraintEnd_toStartOf="@+id/imgInformationSpend"
        app:layout_constraintStart_toEndOf="@+id/lblDateSpend"
        app:layout_constraintTop_toTopOf="@+id/lblDateSpend"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgInformationSpend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/lblTypeSpend"
        app:layout_constraintEnd_toStartOf="@+id/imgEditSpend"
        app:layout_constraintTop_toTopOf="@+id/lblTypeSpend"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_info_light_green_900_24dp" />

    <ImageView
        android:id="@+id/imgEditSpend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgInformationSpend"
        app:layout_constraintEnd_toStartOf="@+id/imgDeleteSpend"
        app:layout_constraintTop_toTopOf="@+id/imgInformationSpend"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_mode_edit_indigo_a700_24dp" />

    <ImageView
        android:id="@+id/imgDeleteSpend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgEditSpend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgEditSpend"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_remove_circle_red_900_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>