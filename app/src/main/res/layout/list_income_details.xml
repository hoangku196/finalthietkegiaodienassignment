<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    TODO: làm nốt layout-->


    <TextView
        android:id="@+id/lblDateIncome"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblTypeIncome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/lblDateIncome"
        app:layout_constraintEnd_toStartOf="@+id/imgInformationIncome"
        app:layout_constraintStart_toEndOf="@+id/lblDateIncome"
        app:layout_constraintTop_toTopOf="@+id/lblDateIncome"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgInformationIncome"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/lblTypeIncome"
        app:layout_constraintEnd_toStartOf="@+id/imgEditIncome"
        app:layout_constraintTop_toTopOf="@+id/lblTypeIncome"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_info_light_green_900_24dp" />

    <ImageView
        android:id="@+id/imgEditIncome"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgInformationIncome"
        app:layout_constraintEnd_toStartOf="@+id/imgDeleteIncome"
        app:layout_constraintTop_toTopOf="@+id/imgInformationIncome"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_mode_edit_indigo_a700_24dp" />

    <ImageView
        android:id="@+id/imgDeleteIncome"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgEditIncome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgEditIncome"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_remove_circle_red_900_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>