<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edtMaKT"
        style="@style/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập vào mã  khoản thu"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtTenKT"
        style="@style/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập vào tên khoản thu"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spTenLT"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/edtMoneyIncome"
        style="@style/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập vào số tiền"
        android:inputType="number" />

    <EditText
        android:id="@+id/edtDateIncome"
        style="@style/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập vào ngày"
        android:inputType="date|datetime" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSaveIncome"
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:text="Lưu" />

        <Button
            android:id="@+id/btnResetIncome"
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:text="Nhập lại" />
    </LinearLayout>
</LinearLayout>